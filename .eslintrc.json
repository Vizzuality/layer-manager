{
  "extends": ["vizzuality", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "globals": {
    "L": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "jest",
    "prettier"
  ],
  "rules": {
    "no-debugger": 1,
    "no-eval": [1, { "allowIndirect": true }],
    "import/no-extraneous-dependencies": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
