{
  "extends": "vizzuality",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "L": true
  },
  "rules": {
    "no-debugger": 1,
    "no-eval": [2, { "allowIndirect": true }],
    "import/no-extraneous-dependencies": 0
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
