{
  "extends": ["vizzuality", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "globals": {
    "L": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "jest",
    "prettier"
  ],
  "rules": {
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "no-debugger": 1,
    "no-eval": [1, { "allowIndirect": true }],
    "import/no-extraneous-dependencies": 0,
    "react/sort-comp": "off"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
