{
  "name": "@vizzuality/layer-manager-monorepo",
  "version": "4.0.0-alpha",
  "description": "Vizzuality's Layer Manager monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/layer-manager.git"
  },
  "author": "Vizzuality",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "serve": "http-server . -p 8000 -a 0.0.0.0",
    "lint": "eslint -c .eslintrc.json --ext .jsx,.js --fix",
    "test": "jest --config ./jest.config.js --colors",
    "watch": "bnr watch && bnr babel:watch",
    "build": "lerna run build",
    "prettier": "prettier --single-quote --write \"src/**/*.js\"",
    "start:sandbox": "lerna run start --scope @vizzuality/layer-manager-sandbox",
    "build:sandbox": "cd src/applications/sandbox && yarn build",
    "test:sandbox": "cd sandbox && yarn test",
    "deploy:sandbox": "cd sandbox && yarn deploy",
    "watch:core": "lerna run watch --scope @vizzuality/layer-manager",
    "build:core": "lerna run build --scope @vizzuality/layer-manager",
    "watch:plugin-mapbox-gl": "lerna run watch --scope @vizzuality/layer-manager-plugin-mapbox-gl",
    "build:plugin-mapbox-gl": "lerna run build --scope @vizzuality/layer-manager-plugin-mapbox-gl",
    "watch:provider-carto": "lerna run watch --scope @vizzuality/layer-manager-provider-carto",
    "build:provider-carto": "lerna run build --scope @vizzuality/layer-manager-provider-carto",
    "watch:utils": "lerna run watch --scope @vizzuality/layer-manager-utils",
    "build:utils": "lerna run build --scope @vizzuality/layer-manager-utils",
    "watch:components-react": "lerna run watch --scope @vizzuality/layer-manager-components-react",
    "build:components-react": "lerna run build --scope @vizzuality/layer-manager-components-react"
  },
  "betterScripts": {
    "build": {
      "command": "rollup -c",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "watch": {
      "command": "rollup -c -w && babel src -d lib --watch",
      "env": {
        "BABEL_ENV": "rollup"
      }
    },
    "babel:build": {
      "command": "babel src -d lib"
    },
    "babel:watch": {
      "command": "babel src -d lib --watch"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --config .prettierrc --write",
      "eslint -c .eslintrc.json --ext .jsx,.js --fix",
      "git add"
    ]
  },
  "workspaces": [
    "src/packages/*",
    "src/packages/*/*",
    "src/applications/*",
    "src/applications/*/*"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "better-npm-run": "^0.1.1",
    "deck.gl": "7.3.6",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-vizzuality": "^1.3.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "jest": "^23.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^9.2.5",
    "luma.gl": "7.3.2",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rollup": "^0.66.2",
    "rollup-plugin-babel": "3.0.7",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^4.0.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "lodash": "^4.17.20",
    "prop-types": "^15.7.2",
    "supercluster": "^4.1.1"
  },
  "peerDependencies": {
    "react": "^16.3.2"
  }
}
