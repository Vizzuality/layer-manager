{
  "presets": [
    [
      "env",
      {
        "modules": false
      }
    ],
    "react"
  ],
  "plugins": [
    "transform-runtime",
    "transform-object-rest-spread",
    ["transform-class-properties", { "spec": true }],
    [
      "module-resolver",
      {
        "root": ".",
        "alias": {
          "components": "./src/components",
          "lib": "./src/lib",
          "plugins": "./src/plugins",
          "services": "./src/services",
          "utils": "./src/utils"
        },
        "extensions": [".js", ".jsx"]
      }
    ]
  ],
  "env": {
    "rollup": {
      "plugins": ["external-helpers"]
    }
  }
}
