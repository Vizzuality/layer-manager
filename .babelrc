{
  "presets": [
    [
      "env", {
        "modules": false,
        "targets": {
          "browsers": ["last 2 versions", "safari >= 7","ie >= 10"]
        },
        "useBuiltIns": true
      }
    ],
    "react"
  ],
  "plugins": [
    "transform-runtime",
    "transform-object-rest-spread",
    ["transform-class-properties", { "spec": true }],
    [
      "module-resolver",
      {
        "root": ".",
        "alias": {
          "components": "./src/components",
          "lib": "./src/lib",
          "plugins": "./src/plugins",
          "services": "./src/services"
        },
        "extensions": [".js", ".jsx"]
      }
    ]
  ],
  "env": {
    "rollup": {
      "plugins": [
        "external-helpers"
      ]
    }
  }
}
